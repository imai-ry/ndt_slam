<launch>
  <node pkg="ndt_slam" type="ndt_slam_node" name="ndt_slam" output="screen" >
    <remap from="pointcloud" to="velodyne_points" />
    <param name="map_frame_id" value="map" />
    <param name="scan_shift" type="double" value="0.5" />
    
    <param name="tf_btol_x" type="double" value="0.0" />
    <param name="tf_btol_y" type="double" value="0.0" />
    <param name="tf_btol_z" type="double" value="10.0" />
    <param name="tf_btol_roll" type="double" value="0.0" />
    <param name="tf_btol_pitch" type="double" value="0.0" />
    <param name="tf_btol_yaw" type="double" value="0.0" />
    
    <param name="method_type" type="int" value="1" />
    <param name="voxel_leaf_size" type="double" value="0.2" />
    <param name="trans_eps" type="double" value="0.01" />
    <param name="step_size" type="double" value="0.1" />
    <param name="ndt_res" type="double" value="1.0" />
    <param name="max_iter" type="int" value="30" />
    
  </node>
</launch>
